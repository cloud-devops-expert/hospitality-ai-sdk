{
  "name": "hospitality-ai-sdk",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest lib/database/__tests__/integration.test.ts --runInBand",
    "test:all": "jest && npm run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "cdk:deploy": "cd infrastructure && cdk deploy",
    "cdk:deploy:dev": "cd infrastructure && cdk deploy -c environment=dev",
    "cdk:deploy:prod": "cd infrastructure && cdk deploy -c environment=prod -c minCapacity=1.0 -c maxCapacity=4.0",
    "cdk:diff": "cd infrastructure && cdk diff",
    "cdk:synth": "cd infrastructure && cdk synth",
    "cdk:destroy": "cd infrastructure && cdk destroy",
    "cdk:bootstrap": "cd infrastructure && cdk bootstrap",
    "train": "tsx scripts/train-all.ts",
    "train:noshow": "tsx scripts/train-noshow.ts",
    "train:segmentation": "tsx scripts/train-segmentation.ts",
    "train:scheduler": "tsx scripts/training-scheduler.ts",
    "webrtc:signaling": "tsx lib/webrtc/signaling-server.ts",
    "webrtc:demo": "tsx scripts/demo-webrtc.ts",
    "unifi:test": "tsx scripts/test-unifi-unified.ts",
    "demo:location": "tsx scripts/demo-location-aware-portal.ts"
  },
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.915.0",
    "@payloadcms/db-postgres": "^3.60.0",
    "@payloadcms/next": "^3.60.0",
    "@payloadcms/plugin-seo": "^3.60.0",
    "@payloadcms/richtext-lexical": "^3.60.0",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "brain.js": "^2.0.0-beta.24",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "graphql": "^16.11.0",
    "ml": "^8.0.0",
    "ml-cross-validation": "^1.3.0",
    "ml-kmeans": "^6.0.0",
    "ml-random-forest": "^2.1.0",
    "natural": "^8.1.0",
    "next": "^15.0.0",
    "next-themes": "^0.4.6",
    "node-cron": "^4.2.1",
    "payload": "^3.60.0",
    "pg": "^8.16.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "regression": "^2.0.1",
    "sharp": "^0.34.4",
    "simple-statistics": "^7.8.8",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudwatch": "^3.914.0",
    "@aws-sdk/client-rds-data": "^3.914.0",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.23",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.0",
    "aws-cdk-lib": "^2.220.0",
    "constructs": "^10.4.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jiti": "^2.6.1",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  }
}
