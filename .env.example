# Database Configuration (Required for PayloadCMS)
DATABASE_URL=postgresql://localhost:5432/hospitality_ai_cms

# AWS RDS Data API Configuration (Alternative to DATABASE_URL)
# Uncomment and configure to use Aurora Serverless v2 with Data API
# DB_CLUSTER_ARN=arn:aws:rds:us-east-1:123456789012:cluster:your-cluster-name
# DB_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:your-secret-name
# DATABASE_NAME=hospitality_ai_cms
# AWS_REGION=us-east-1

# AWS Credentials (for RDS Data API and CloudWatch)
# Option 1: Use AWS Profile (recommended for local development)
# AWS_PROFILE=your-profile-name
# Option 2: Use explicit credentials
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Metrics Configuration
# ENABLE_METRICS=true
# METRICS_NAMESPACE=HospitalityAI

# PayloadCMS Configuration (Required)
PAYLOAD_SECRET=your-secret-key-here-change-this-to-random-string
NEXT_PUBLIC_SERVER_URL=http://localhost:3001

# AI API Keys (Optional - for LLM features in demo pages)
# If not provided, only traditional/local algorithms will be used
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_ENV=development

# Feature Flags
NEXT_PUBLIC_ENABLE_LLM=false
NEXT_PUBLIC_ENABLE_CACHING=true
